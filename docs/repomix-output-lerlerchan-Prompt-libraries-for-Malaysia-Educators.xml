            // Universal prompts - Only assign categories to cards that don't already have them
            const universalSection = document.querySelectorAll('.prompt-card');
            let cardIndexToAssign = 0;
            universalSection.forEach((card) => {
                if (!card.getAttribute('data-category')) {
                    if (cardIndexToAssign < 9) card.setAttribute('data-category', 'é€šç”¨');
                    else if (cardIndexToAssign < 13) card.setAttribute('data-category', 'deepseek');
                    else if (cardIndexToAssign < 17) card.setAttribute('data-category', 'qwen');
                    else if (cardIndexToAssign < 21) card.setAttribute('data-category', 'minimax');
                    else card.setAttribute('data-category', 'exam');
                    cardIndexToAssign++;
                }
            });

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const promptCards = document.querySelectorAll('.prompt-card');
            const categoryTitles = document.querySelectorAll('.category-title, h3[data-category]');

            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                let visibleCount = 0;

                promptCards.forEach(card => {
                    const title = card.querySelector('.prompt-title').textContent.toLowerCase();
                    const content = card.querySelector('.prompt-content').textContent.toLowerCase();

                    if (title.includes(searchTerm) || content.includes(searchTerm)) {
                        card.style.display = 'block';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Show/hide category titles based on visible cards
                categoryTitles.forEach(title => {
                    const nextCards = [];
                    let nextElement = title.nextElementSibling;

                    while (nextElement && !nextElement.classList.contains('category-title')) {
                        if (nextElement.classList.contains('prompt-card')) {
                            nextCards.push(nextElement);
                        }
                        nextElement = nextElement.nextElementSibling;
                    }

                    const hasVisibleCards = nextCards.some(card => card.style.display !== 'none');
                    title.style.display = hasVisibleCards || searchTerm === '' ? 'block' : 'none';
