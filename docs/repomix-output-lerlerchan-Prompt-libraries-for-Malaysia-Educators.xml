    <script>
        // Copy function
        function copyPrompt(button) {
            const promptCard = button.closest('.prompt-card');
            const promptContent = promptCard.querySelector('.prompt-content').textContent;

            navigator.clipboard.writeText(promptContent).then(() => {
                // Show notification
                const notification = document.getElementById('notification');
                notification.style.display = 'flex';
                notification.style.alignItems = 'center';
                notification.style.gap = '0.5rem';

                // Change button state
                const originalHTML = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Telah Disalin!';
                button.classList.add('copied');

                // Reset after 2 seconds
                setTimeout(() => {
                    notification.style.display = 'none';
                    button.innerHTML = originalHTML;
                    button.classList.remove('copied');
                }, 2000);
            }).catch(err => {
                alert('Penyalinan gagal, sila salin secara manual');
                console.error('Failed to copy:', err);
            });
        }

        // View full prompt in modal
        function viewFullPrompt(button) {
            const card = button.closest('.prompt-card');
            const fullPrompt = card.querySelector('.prompt-content').textContent;
            const title = card.querySelector('.prompt-title').textContent;

            // Create modal
            const modal = document.createElement('div');
            modal.className = 'modal';
            modal.innerHTML = `
                <div class="modal-content">
                    <div class="modal-header">
                        <h2>${title}</h2>
                        <button class="modal-close" onclick="closeModal(this)">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <pre class="modal-prompt">${escapeHtml(fullPrompt)}</pre>
                    </div>
                    <div class="modal-footer">
                        <button class="copy-btn" onclick="copyFromModal(this)">
                            <i class="fas fa-copy"></i> Salin Prompt
                        </button>
                        <button class="view-btn" onclick="closeModal(this)">Tutup</button>
                    </div>
                </div>
            `;

            document.body.appendChild(modal);

            // Close on background click
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    closeModal(modal.querySelector('.modal-close'));
                }
            });

            // Prevent body scroll
            document.body.style.overflow = 'hidden';
        }

        // Close modal
        function closeModal(button) {
            const modal = button.closest('.modal');
            modal.remove();
            document.body.style.overflow = '';
        }

        // Copy from modal
        function copyFromModal(button) {
            const modal = button.closest('.modal');
            const promptText = modal.querySelector('.modal-prompt').textContent;

            navigator.clipboard.writeText(promptText).then(() => {
                const originalHTML = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Telah Disalin!';
                button.classList.add('copied');

                setTimeout(() => {
                    button.innerHTML = originalHTML;
                    button.classList.remove('copied');
                }, 2000);
            });
        }

        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
