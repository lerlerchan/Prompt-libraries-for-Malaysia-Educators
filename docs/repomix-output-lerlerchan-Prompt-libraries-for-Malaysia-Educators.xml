                                            (category === 'nanoBanana2' && title.textContent.includes('NanoBanana 2')) ||
                                            (category === 'exam' && title.textContent.includes('è€ƒè¯•'));
                            title.style.display = showTitle ? 'block' : 'none';
                        }
                    });
                });
            });
        });
