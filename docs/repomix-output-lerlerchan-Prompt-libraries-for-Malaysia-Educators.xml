        // Add category data attributes to all prompt cards and enable search/filter
        document.addEventListener('DOMContentLoaded', function() {
            // Assign categories to prompt cards based on their position
            const promptCards = document.querySelectorAll('.prompt-card');
            promptCards.forEach((card, index) => {
                if (index < 4) card.setAttribute('data-category', 'umum');
                else if (index < 8) card.setAttribute('data-category', 'umum2');
                else if (index < 12) card.setAttribute('data-category', 'umum3');
                else if (index < 16) card.setAttribute('data-category', 'gemini');
                else if (index < 20) card.setAttribute('data-category', 'ilmu');
                else if (index < 26) card.setAttribute('data-category', 'peperiksaan');
                else card.setAttribute('data-category', 'kbat');
            });

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const categoryTitles = document.querySelectorAll('.category-title, h3[style*="font-size: 1.5rem"]');

            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();

                promptCards.forEach(card => {
                    const title = card.querySelector('.prompt-title').textContent.toLowerCase();
                    const content = card.querySelector('.prompt-content').textContent.toLowerCase();

                    if (title.includes(searchTerm) || content.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Show/hide category titles based on visible cards
                categoryTitles.forEach(title => {
                    const nextElement = title.nextElementSibling;

                    if (nextElement && nextElement.classList.contains('prompt-cards-grid')) {
                        const visibleCards = Array.from(nextElement.querySelectorAll('.prompt-card')).some(card => card.style.display !== 'none');
                        title.style.display = visibleCards || searchTerm === '' ? 'block' : 'none';
                    }
                });
            });

            // Filter functionality
            const filterButtons = document.querySelectorAll('.filter-btn');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Update active button
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');

                    const category = this.getAttribute('data-category');

                    // Clear search
                    searchInput.value = '';

                    // Filter cards
                    promptCards.forEach(card => {
                        const cardCategory = card.getAttribute('data-category');
                        if (category === 'all' || cardCategory === category) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });

                    // Show/hide sections based on category
                    categoryTitles.forEach(title => {
                        if (category === 'all') {
                            title.style.display = 'block';
                        } else {
                            const nextElement = title.nextElementSibling;
                            if (nextElement && nextElement.classList.contains('prompt-cards-grid')) {
                                const hasVisibleCards = Array.from(nextElement.querySelectorAll('.prompt-card')).some(card => card.style.display !== 'none');
                                title.style.display = hasVisibleCards ? 'block' : 'none';
                            }
                        }
                    });
                });
            });
        });
    </script>
